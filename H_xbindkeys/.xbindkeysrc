# Generic Launchers
"xbindkeys_show" 
    control+shift + q
"catfish"
    control+shift+alt + w
"doublecmd"
    control+alt + e
"gksudo doublecmd"
    control+shift+alt + e
"firefox"
    control+alt + b
"peek"
    control+shift + Print
"i3lock -c 0A0A0A"
    control+alt + l
"xfce4-terminal -e ncmpcpp"
    control+alt + m
"xfce4-terminal -e vim"
    control+alt + v

# Xfce4 Settings
"xfce4-terminal"
    control+alt + t
"xfce4-screenshooter -r -s /home/pcache/Pictures/Screenshots"
    Print
"xfce4-screenshooter -w -s /home/pcache/Pictures/Screenshots"
    shift + Print
"xfce4-screenshooter -f -s /home/pcache/Pictures/Screenshots"
    control + Print
"xfce4-session-logout"
    control+alt + Delete

# Custom Scripts
"switchaudiodevice HEADPHONES"
    control+alt + h
"switchaudiodevice SPEAKERS"
    control+alt + s
"mpc --port=6601 toggle"
    Mod2+Mod4 + Insert
"mpc --port=6601 stop"
    Mod2+Mod4 + Home
"mpc --port=6601 next"
    Mod2+Mod4 + End
"mpc --port=6601 prev"
    Mod2+Mod4 + Delete
"amixer set Master 5%+"
    Mod2+Mod4 + Prior
"amixer set Master 5%-"
    Mod2+Mod4 + Next

