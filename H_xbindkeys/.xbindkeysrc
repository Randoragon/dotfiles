# Generic Launchers
"x-terminal-emulator --class=floating"
    control+alt + t
"xbindkeys_show" 
    control+shift + q
"catfish"
    control+alt + w
"doublecmd"
    control+alt + e
"gksudo doublecmd"
    control+shift+alt + e
"thunar"
    control+alt + i
"gksudo thunar"
    control+shift+alt + i
"firefox"
    control+alt + b
"x-terminal-emulator -e ncmpcpp"
    control+alt + m
"x-terminal-emulator -e vim"
    control+alt + v
"discord"
    control+alt + d
"keepassxc"
    control+alt + o

# CopyQ
"copyq menu"
    mod2+mod4 + v
"copyq toggle"
    mod2+mod4 + c

# Screenshots
"flameshot gui"
    Print
"flameshot full -c"
    control + Print
"flameshot full -p $HOME/Pictures/Screenshots/ && gimp $HOME/Pictures/Screenshots/screenshot_$(date +%F_%H-%M-%S).png"
    control+shift + Print
"peek"
    control+alt + Print

# Music & Volume Control
"mpc --port=6601 toggle"
    XF86AudioPlay
"mpc --port=6601 stop"
    XF86AudioStop
"mpc --port=6601 next"
    XF86AudioNext
"mpc --port=6601 prev"
    XF86AudioPrev
"mpc --port=6601 toggle"
    Mod2+Mod4 + Insert
"mpc --port=6601 stop"
    Mod2+Mod4 + Home
"mpc --port=6601 next"
    Mod2+Mod4 + End
"mpc --port=6601 prev"
    Mod2+Mod4 + Delete
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    XF86AudioMute
"pactl set-sink-volume @DEFAULT_SINK@ +2%"
    XF86AudioRaiseVolume
"pactl set-sink-volume @DEFAULT_SINK@ -2%"
    XF86AudioLowerVolume
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    Mod2+Mod4 + BackSpace
"pactl set-sink-volume @DEFAULT_SINK@ +2%"
    Mod2+Mod4 + Prior
"pactl set-sink-volume @DEFAULT_SINK@ -2%"
    Mod2+Mod4 + Next
"pactl set-source-mute @DEFAULT_SOURCE@ toggle"
    XF86AudioMicMute

# Rofi
"~/.config/rofi/playlists"
    Mod2+Mod4+shift + Insert
"rofi -show combi"
    control + space
"rofi -show calc -modi 'calc:qalc +u8'"
    Mod2+Mod4 + equal

# Restart xmodmap
"xmodmap ~/.Xmodmap"
    control+shift+alt + m
"xmodmap ~/.Xmodmap"
    Menu

