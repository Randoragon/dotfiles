# Options (https://newsboat.org/releases/2.10.2/docs/newsboat.html#_first_steps)
keep-articles-days 30
auto-reload yes
reload-time 5
cleanup-on-quit yes
display-article-progress yes
goto-next-feed no
confirm-exit yes
download-path "~/Downloads/Podcasts/%n/"
player "mpv --no-video --audio-display=no"
delete-played-files no
show-read-feeds no
show-read-articles yes
#feed-sort-order lastupdated-desc
article-sort-order date-asc
notify-always yes
notify-program "~/.scripts/dwmblocks/newsboat"
podlist-format "%2i [%5dMB/%5tMB] %-15S %-40b <%u>"

# Keybindings
bind-key j down
bind-key j next articlelist
bind-key k up
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key ^D pagedown
bind-key ^U pageup
bind-key l open
bind-key h quit
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key U show-urls
bind-key x pb-delete
bind-key ^N next-dialog
bind-key ^P prev-dialog
bind-key ^S save
bind-key s sort
bind-key S rev-sort
bind-key T clear-tag
bind-key F clear-filter
bind-key ^F set-filter
bind-key q hard-quit
bind-key ^L toggle-show-read-feeds
bind-key ^M toggle-source-view
bind-key r reload
unbind-key D # delete-article
bind-key D pb-toggle-download-all

# Macros
macro o set browser "~/.scripts/newsboat-mpv-browser %u" ; open-in-browser ; set browser "$BROWSER"
macro O set browser "~/.scripts/newsboat-mpv-browser --audio-display=no --no-video %u" ; open-in-browser ; set browser "$BROWSER"
macro m set browser "youtube-dl -x -o '~/Downloads/Music/%(title)s.%(ext)s' --no-playlist --audio-quality 0 --audio-format mp3 %u" ; open-in-browser ; set browser "$BROWSER"
macro M set browser "youtube-dl -f 'bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]/best' -o '~/Downloads/%(title)s.%(ext)s' --write-sub --no-playlist --embed-subs %u" ; open-in-browser ; set browser "$BROWSER"
macro d set browser "wget -np -P ~/Downloads %u" ; open-in-browser ; set browser "$BROWSER"
macro u set browser "printf %u | xclip -selection clipboard" ; open-in-browser ; set browser "$BROWSER"
macro l set browser "surf %u" ; open-in-browser ; set browser "$BROWSER"
macro L set browser "~/.scripts/newsboat-stream-browser %u" ; open-in-browser ; set browser "$BROWSER"

# Color (https://newsboat.org/releases/2.10.2/docs/newsboat.html#_configuring_colors)
color background white black
color article white black
color listnormal white black
color listfocus black white
color listnormal_unread green black bold
color listfocus_unread black green bold
color info black blue bold

# Highlight (https://newsboat.org/releases/2.10.2/docs/newsboat.html#_highlighting_text)
highlight feedlist "^.*(0/0)).*---" black default
highlight feedlist "---.*---.*" yellow default
highlight article "^Feed:.*" green default
highlight article "^Feed:" green default bold
highlight article "^Title:.*" yellow default
highlight article "^Title:" yellow default bold
highlight article "^Author:.*" red default
highlight article "^Author:" red default bold
highlight article "^Date:.*" magenta default
highlight article "^Date:" magenta default bold
highlight article "^(Link|.*URL):.*" cyan default
highlight article "^(Link|.*URL):" cyan default bold

