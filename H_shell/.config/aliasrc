# File for storing command abbreviations

# General
alias ls='ls --color=auto'
alias setkblayoutpl='setxkbmap -layout pl'
alias setlangus='LANG=en_US.UTF-8 && LC_ALL="en_US.UTF-8"'
alias rm="printf '%s' 'Please use \\rm for permanent deletion and tp for trash-cli'; false"
alias rmdir="printf '%s' 'Please use \\rmdir for permanent deletion and tp for trash-cli'; false"
alias tp='trash-put'
alias trm='trash-rm'
alias tls='trash-list'
alias nnn='nnn -R'
alias sxiv='sxiv -qab'
alias fzf='fzf --bind=ctrl-d:half-page-down,ctrl-u:half-page-up'
alias xo='xdg-open'

# Git 
alias gs="git status"
alias ga="git add"
alias gd="git diff"
alias gds="git diff --staged"
alias gc="git commit"
alias gp="git push"
alias grs="git restore --staged"

# Youtube-DL
alias ytmp3="youtube-dl -x -o '~/Downloads/Music/%(title)s.%(ext)s' --no-playlist --audio-quality 0 --audio-format mp3"
alias ytmp4="youtube-dl -f 'bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]/best' -o '~/Downloads/%(title)s.%(ext)s' --write-sub --write-thumbnail --no-playlist --embed-subs --embed-thumbnail"
