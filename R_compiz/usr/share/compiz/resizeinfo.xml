<?xml version="1.0" encoding="UTF-8"?>
<compiz>
    <plugin useBcop="true" name="resizeinfo">
	<short>Resize Info</short>
	<long>Display info on resize similar to metacity</long>
	<category>Utility</category>
	<deps>
	    <requirement>
		<plugin>opengl</plugin>
	    </requirement>
	    <relation type="after">
		<plugin>opengl</plugin>
		<plugin>composite</plugin>
		<plugin>resize</plugin>
		<plugin>decor</plugin>
	    </relation>
	</deps>
	<options>
	    <option type="int" name="fade_time">
		<short>Fade Time</short>
		<short xml:lang="cs">Doba zprůhlednění</short>
		<short xml:lang="de">Ausblendungszeit</short>
		<short xml:lang="el">Χρόνος Ξεθωριάσματος</short>
		<short xml:lang="es">Tiempo de desvanecimiento</short>
		<short xml:lang="eu">Iraungitze denbora</short>
		<short xml:lang="fi">Häivytysviive</short>
		<short xml:lang="fr">Temps de Fondu</short>
		<short xml:lang="gl">Tempo de desvanecemento</short>
		<short xml:lang="gu">આછાપણાનો સમય</short>
		<short xml:lang="he">משך עמעום</short>
		<short xml:lang="hu">Elhalványítási idő</short>
		<short xml:lang="it">Tempo dissolvenza</short>
		<short xml:lang="ja">フェード時間</short>
		<short xml:lang="ko">페이드 시간</short>
		<short xml:lang="nb">Uttoningstid</short>
		<short xml:lang="nl">Verduisteren tijdsduur</short>
		<short xml:lang="or">ଫିକାହେବା ସମଯ</short>
		<short xml:lang="pl">Czas przenikania</short>
		<short xml:lang="pt">Tempo de Esmaecimento</short>
		<short xml:lang="pt_BR">Tempo de desvanecimento</short>
		<short xml:lang="ru">Время исчезновения</short>
		<short xml:lang="sk">Doba stmavnutia</short>
		<short xml:lang="sv">Toningstid</short>
		<short xml:lang="tr">Solma Süresi</short>
		<short xml:lang="uk">Час зникнення</short>
		<short xml:lang="zh_CN">渐隐时间</short>
		<short xml:lang="zh_TW">淡入/淡出時間</short>
		<long>Fade time (in ms) for the popup window.</long>
		<default>500</default>
		<min>10</min>
		<max>5000</max>
	    </option>
	    <option type="bool" name="always_show">
		<short>Show Resizeinfo For All Windows</short>
		<long>Show resize info for all windows as opposed to just for text based windows like terminals.</long>
		<default>false</default>
	    </option>
	    <option type="bool" name="resizeinfo_font_bold">
		<short>Bold Font</short>
		<long>Render the resize info's size display with a bold font.</long>
		<default>true</default>
	    </option>
	    <option type="int" name="resizeinfo_font_size">
		<short>Font Size</short>
		<long>Font size of the resize info's display.</long>
		<default>12</default>
		<min>10</min>
		<max>14</max>
	    </option>
	    <option type="color" name="text_color">
		<short>Text Color</short>
		<long>Color and opacity of the resize popup's text.</long>
		<default>
		    <red>0x0000</red>
		    <blue>0x0000</blue>
		    <green>0x0000</green>
		    <alpha>0xffff</alpha>
		</default>
	    </option>
	    <option type="color" name="gradient_1">
		<short>Gradient Color 1</short>
		<long>Color and opacity on the left side of the gradient background.</long>
		<default>
		    <red>0xcccc</red>
		    <green>0xcccc</green>
		    <blue>0xe665</blue>
		    <alpha>0xcccc</alpha>
		</default>
	    </option>
	    <option type="color" name="gradient_2">
		<short>Gradient Color 2</short>
		<long>Color and opacity in the center of the gradient background.</long>
		<default>
		    <red>0xf332</red>
		    <green>0xf332</green>
		    <blue>0xf332</blue>
		    <alpha>0xcccc</alpha>
		</default>
	    </option>
	    <option type="color" name="gradient_3">
		<short>Gradient Color 3</short>
		<long>Color and opacity on the right side of the gradient background.</long>
		<default>
		    <red>0xd998</red>
		    <green>0xd998</green>
		    <blue>0xd998</blue>
		    <alpha>0xcccc</alpha>
		</default>
	    </option>
	    <option type="color" name="outline_color">
		<short>Outline Color</short>
		<long>Color and opacity of the background's outline.</long>
		<default>
		    <red>0xe665</red>
		    <green>0xe665</green>
		    <blue>0xe665</blue>
		    <alpha>0xffff</alpha>
		</default>
	    </option>
	</options>
    </plugin>
</compiz>