    <long>Access the desktop easily by using variable ways to move windows out of view</long>
    <category>Desktop</category>
    <feature>showdesktop</feature>
    <deps>
	<requirement>
	    <plugin>opengl</plugin>
	</requirement>
	<relation type="after">
	    <plugin>composite</plugin>
	    <plugin>opengl</plugin>
	    <plugin>fade</plugin>
	    <plugin>decor</plugin>
	    <plugin>unityshell</plugin>
	</relation>
    </deps>
    <options>
      <group>
        <short>General</short>
        <option type="float" name="speed">
          <short>Speed</short>
          <short xml:lang="bg">Скорост</short>
          <short xml:lang="ca">Velocitat</short>
          <short xml:lang="cs">Rychlost</short>
          <short xml:lang="da">Hastighed</short>
          <short xml:lang="de">Geschwindigkeit</short>
          <short xml:lang="el">Ταχύτητα</short>
