<?xml version="1.0" encoding="UTF-8"?>
<compiz>
  <plugin useBcop="true" name="thumbnail">
    <short>Thumbnail Window Previews</short>
    <long>Live window thumbnails at the dock, launcher or taskbar</long>
    <category>Extras</category>
    <deps>
      <relation type="after">
        <plugin>opengl</plugin>
        <plugin>mousepoll</plugin>
        <plugin>text</plugin>
        <plugin>decor</plugin>
      </relation>
      <requirement>
        <plugin>opengl</plugin>
        <plugin>mousepoll</plugin>
      </requirement>
    </deps>
    <options>
      <group>
        <short>General</short>
        <option type="bool" name="always_on_top">
          <short>Thumbnails Always On Top</short>
          <long>Paint thumbnails always on top.</long>
          <default>true</default>
        </option>
        <option type="int" name="thumb_size">
          <short>Thumbnail Window Size</short>
          <long>Maximum horizontal size of the thumbnail (in pixel).</long>
          <default>200</default>
          <min>50</min>
          <max>1500</max>
        </option>
        <option type="int" name="show_delay">
          <short>Show Delay</short>
          <long>Time before the thumbnail preview is faded in (in ms).</long>
          <default>100</default>
          <min>100</min>
          <max>10000</max>
        </option>
        <option type="float" name="fade_speed">
          <short>Fade In/Out Duration</short>
          <long>Fade in/out duration (in seconds).</long>
          <default>0.5</default>
          <min>0.0</min>
          <max>5.0</max>
          <precision>0.1</precision>
        </option>
        <option type="int" name="border">
          <short>Thumbnail Border Size</short>
          <long>Size of thumbnail window preview border (in pixel).</long>
          <default>16</default>
          <min>1</min>
          <max>32</max>
        </option>
        <option type="color" name="thumb_color">
          <short>Thumbnail Border Glow Color</short>
          <long>Border glow color and opacity or opacity of the window like black background.</long>
          <default>
            <red>0x0000</red>
            <green>0x0000</green>
            <blue>0x0000</blue>
            <alpha>0x7fff</alpha>
          </default>
        </option>
        <option type="bool" name="window_like">
          <short>Paint Window Like Background</short>
          <long>Render a black, window-like background instead of the background glow.</long>
          <default>true</default>
        </option>
        <option type="bool" name="mipmap">
          <short>Generate Mipmaps</short>
          <long>Generate mipmaps for higher quality texture scaling, if possible.</long>
          <default>false</default>
        </option>
        <subgroup>
          <short>Dock / Launcher / Taskbar</short>
          <option type="bool" name="current_viewport">
            <short>Only Windows of Current Viewport</short>
            <long>Enable this, if your dock, launcher or taskbar is set to show only windows of the current viewport.</long>
            <default>true</default>
          </option>
        </subgroup>
      </group>
      <group>
        <short>Window Title Text</short>
        <option type="bool" name="title_enabled">
          <short>Enable Titles</short>
          <long>Render window title text below the thumbnail.</long>
          <default>true</default>
        </option>
        <option type="bool" name="font_bold">
          <short>Bold Font</short>
          <long>Use a bold font to render the window title.</long>
          <default>true</default>
        </option>
        <option type="int" name="text_distance">
          <short>Text Distance</short>
          <long>The gap between the thumbnail and the window title text (in pixel).</long>
          <default>10</default>
          <min>0</min>
          <max>32</max>
        </option>
        <option type="int" name="font_size">
          <short>Font Size</short>
          <long>The size of the window title (in pixel).</long>
          <default>12</default>
          <min>6</min>
          <max>36</max>
        </option>
        <option type="color" name="font_color">
          <short>Font Color</short>
          <long>Color and opacity of the window title font.</long>
          <default>
            <red>0xffff</red>
            <green>0xffff</green>
            <blue>0xffff</blue>
            <alpha>0xffff</alpha>
          </default>
        </option>
        <option type="color" name="font_background_color">
          <short>Font Background Color</short>
          <long>Color and opacity of the filled rounded rectangle font background.</long>
          <default>
            <red>0x0000</red>
            <green>0x0000</green>
            <blue>0x0000</blue>
            <alpha>0x7fff</alpha>
          </default>
        </option>
      </group>
    </options>
  </plugin>
</compiz>