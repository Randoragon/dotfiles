#!/usr/bin/sh

# Invokes all commands necessary to process a troff document
# into PDF using neatroff.

# Executables with flags
ROFF="ntroff -mpost -mtbl -mkeep -ms -msrefs"
POST="ntpost"
PPDF="ntpdf -pa4"
EQN="nteqn"
REFR="ntrefer"
PIC="ntpic"
TBL="nttbl"
SOIN="ntsoin"

printf "%s" "$($SOIN <&0 | $REFR | $PIC | $TBL | $EQN | $ROFF | $PPDF)"
