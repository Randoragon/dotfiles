#!/bin/bash
# resizes the window to full height and 50% width and moves into upper right corner

#define the height in px of the top system-bar:
TOPMARGIN=24

#sum in px of all horizontal borders:
RIGHTMARGIN=10

# get width of screen and height of screen
SCREEN_WIDTH=$(xwininfo -root | awk '$1=="Width:" {print $2}')
SCREEN_HEIGHT=$(xwininfo -root | awk '$1=="Height:" {print $2}')

# new width and height
W=$(( ($SCREEN_WIDTH * 2 / 3) - $RIGHTMARGIN ))
H=$(( ($SCREEN_HEIGHT * 3 / 4) - $TOPMARGIN ))

# calculate X and Y position of the centered window
X=$(( $SCREEN_WIDTH / 6 ))
Y=$(( ($SCREEN_HEIGHT / 8) + ($TOPMARGIN / 2)))

# if i3 is installed, enable floating
if hash i3-msg 2>/dev/null; then
    i3-msg -q "floating enable"
fi

wmctrl -r :ACTIVE: -b remove,maximized_vert,maximized_horz && wmctrl -r :ACTIVE: -e 0,$X,$Y,$W,$H

