#!/usr/bin/env python3

# This script does the reverse of plnew, it deletes a m3u playlist and removes its entry from the csv file.


import sys
import os

HOME_DIR = os.path.expanduser('~')
CSV_FILE = f'{HOME_DIR}/.config/rofi/playlists.csv'
PLAYLIST_DIR = f'{HOME_DIR}/Music/Playlists/'

def rprint(msg):
    return os.system('rofi -e "{}" -markup'.format(msg))

if __name__ == '__main__':
    if len(sys.argv) != 2:
        print('E: pldel: Exactly one parameter required (received {})'.format(len(sys.argv)-1))
        rprint('<i>E: pldel:</i> <b>Exactly one parameter required (received {})</b>'.format(len(sys.argv)-1))
        sys.exit(1)

    plname = str(sys.argv[1])
    playlist = PLAYLIST_DIR + plname + '.m3u'

    os.system('rm {}'.format(playlist))

    f = open(CSV_FILE, 'r')
    lines = f.readlines()
    for i in range(len(lines)):
        if lines[i].find(playlist) != -1:
            f.close()
            f = open(CSV_FILE, 'w')

