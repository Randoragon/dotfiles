    b:13
"~/.scripts/wacom/wacom_pad_b3.sh"
    Mod2+Mod4 + b:13
"~/.scripts/wacom/wacom_pad_b4.sh"
    b:14
"~/.scripts/wacom/wacom_pad_b4.sh"
    Mod2+Mod4 + b:14
"~/.scripts/wacom/wacom_stylus_b1.sh"
    b:15
"~/.scripts/wacom/wacom_stylus_b1.sh"
    Mod2+Mod4 + b:15
"~/.scripts/wacom/wacom_stylus_b2.sh"
    b:16
"~/.scripts/wacom/wacom_stylus_b2.sh"
    Mod2+Mod4 + b:16

# Backlight
"xbacklight -inc 5"
    XF86MonBrightnessUp
"xbacklight -dec 5"
    XF86MonBrightnessDown

# Shortcuts Help
"groff -ms -t -T pdf -dpaper=a3l -P-pa3 -P-l ~/dotfiles/.other/shortcuts.roff | zathura --mode=fullscreen -"
    Mod2+Mod4+shift + slash

