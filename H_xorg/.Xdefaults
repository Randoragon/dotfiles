xterm*boldFont: -*-*-*-*-*-*-*-100-*-*-*-60-iso10646-*
!xterm*italicFont: -*-*-*-*-*-*-*-100-*-*-*-60-iso10646-*

! Source: http://www.davidsimmons.com/soft/xtermhacks/
xterm*VT100.translations: #override <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0)

xterm*foreground:       #d3d3d3
xterm*background:       #000000
xterm*cursorColor:  #ff0000
! Blacks
xterm*color0:           #151515
xterm*color8:           #505450
! Reds
xterm*color1:           #a60101
xterm*color9:           #f99090
! Greens
xterm*color2:           #026802
xterm*color10:          #a7e14b
! Yellows
xterm*color3:           #ab6e03
xterm*color11:          #fddc01
! Blues
xterm*color4:           #4a5463
xterm*color12:          #7d8794
! Purples
xterm*color5:           #9c3885
xterm*color13:          #e628ba
! Cyans
xterm*color6:           #08bab0
xterm*color14:          #74fff7
! Whites
xterm*color7:           #bbbbbb
xterm*color15:          #ffffff

!!! RANDORAGON's URXVT CONFIGURATION
! Source: (http://www.wiki.afterstep.org/index.php?title=Rxvt-Unicode_Configuration_Tutorial)
URxvt*transparent: true
#URxvt*tintColor: Green
URxvt*shading: 20
URxvt*saveLines: 12000
URxvt*foreground: White
URxvt*background: Black
URxvt*font: xft:DejaVu Sans Mono:pixelsize=14:antialias=true:hinting=true, \
            xft:Inconsolata-Regular, \
            xft:Unifont
URxvt*boldFont: xft:DejaVu Sans Mono:bold:pixelsize=14:antialias=true:hinting=true, \
                xft:Inconsolata-Bold, \
                xft:Unifont
URxvt*letterSpace: 0
URxvt*color4: RoyalBlue
URxvt*color12: RoyalBlue
! Source: (https://unix.stackexchange.com/a/46376)
URxvt*scrollBar:false
URxvt*scrollBar_right: false
URxvt.keysym.Control-k: command:\033]720;1\007
URxvt.keysym.Control-j: command:\033]721;1\007
! Source: (https://blog.stigok.com/2017/08/14/disable-urxvt-iso14755-mode-yellow-box-on-ctrlshift.html)
URxvt.iso14755: false
