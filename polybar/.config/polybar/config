[colors]
background = #202020
foreground = #ffffff

[bar/mybar]
width = 100%
height = 20
offset-x = 0%
offset-y = 0%
radius = 0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
enable-ipc = true
padding = 0
module-margin = 0
font-0 = Cantarell:size=10.5:style=Bold;3
font-1 = FontAwesome 6 Free Solid:size=9.5:antialias=true;3
font-2 = FontAwesome 6 Brands Regular:size=9.5:antialias=true;3
font-3 = Bitstream Vera Sans Mono:size=10:style=Bold:antialias=true;3
modules-left = hlwm_workspaces hlwm_frame hlwm_minimized mpd
modules-center = xwindow
modules-right = pulseaudio rootfs homefs memory cpu iowait date battery
tray-position = none
click-right = "$TERMINAL -e $EDITOR ~/.config/polybar/config"

[module/hlwm_workspaces]
type = custom/script
exec = "~/.scripts/herbstluftwm/bar_workspaces.sh"
tail = true
format-font = 4
format-background = #000
format-padding-right = 2
click-right = "$TERMINAL -e $EDITOR ~/.scripts/herbstluftwm/bar_workspaces.sh"
scroll-up = "herbstclient use_index -1"
scroll-down = "herbstclient use_index +1"

[module/hlwm_frame]
type = custom/script
exec = "~/.scripts/herbstluftwm/bar_frame.sh"
tail = true
format-background = #000
format-padding = 2
click-left = "herbstclient chain , cycle_layout , emit_hook layout_changed"
click-right = "$TERMINAL -e $EDITOR ~/.scripts/herbstluftwm/bar_frame.sh"
scroll-up = "~/.scripts/herbstluftwm/cycle_frame.sh -1"
scroll-down = "~/.scripts/herbstluftwm/cycle_frame.sh 1"

[module/hlwm_minimized]
type = custom/ipc
hook-0 = "~/.scripts/herbstluftwm/bar_minimized.sh"
format = "(<output>) "
format-foreground = #377
format-background = #000
format-padding = 0
click-left = "~/.scripts/herbstluftwm/unminimize.sh"
click-right = "$TERMINAL -e $EDITOR ~/.scripts/herbstluftwm/bar_minimized.sh"
initial = 1

[module/xwindow]
type = internal/xwindow
label-maxlen = 80

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6601
interval = 1
format-online = <toggle>  <label-time>  <label-song>
label-song = %artist% - %title%
label-time = %elapsed%/%total%
label-song-maxlen = 40
label-song-ellipsis = true
icon-play = 
icon-pause = 
format-online-foreground = #999
format-online-background = #000
format-online-padding = 2

[module/rootfs]
type = internal/fs
mount-0 = /
interval = 10
fixed-values = true
format-mounted =  <label-mounted>
format-unmounted =
label-mounted = %free%
format-mounted-background = #B04F00
format-unmounted-background = #B04F00
format-mounted-padding = 2
format-unmounted-padding = 2

[module/homefs]
type = internal/fs
mount-0 = /home
interval = 10
fixed-values = true
format-mounted =  <label-mounted>
format-unmounted =
label-mounted = %free%
format-mounted-background = #6F3616
format-unmounted-background = #6F3616
format-mounted-padding = 2
format-unmounted-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
label = %{A3:$TERMINAL -n floatme -e htop -s PERCENT_CPU:}  %percentage:2%%  %{A}
label-background = #AA2A2A
label-padding = 0

[module/iowait]
type = custom/script
exec = "~/.scripts/herbstluftwm/bar_iowait.sh"
tail = true
label-background = #567E80
label-padding = 2
click-right = "$TERMINAL -e $EDITOR ~/.scripts/herbstluftwm/bar_iowait.sh"

[module/memory]
type = internal/memory
interval = 2
label = %{A3:$TERMINAL -n floatme -e htop -s PERCENT_MEM:}   %gb_free%  %{A}
label-background = #1B4480
label-padding = 0

[module/date]
type = internal/date
interval = 1
date = %a %m/%d
time = %H:%M:%S
date-alt = UNIX
time-alt = %s
label =  %date%  %time%
label-background = #00561D
label-padding = 2

[module/pulseaudio]
type = internal/pulseaudio
label-volume =   %percentage%%
label-muted =   %percentage%%
click-right = "$TERMINAL -n floatme -e pulsemixer"
label-volume-background = #7236A7
label-muted-foreground = #7236A7
label-muted-background = #FFFFFF
label-volume-padding = 2
label-muted-padding = 2

[module/battery]
type = custom/script
exec = "~/.scripts/herbstluftwm/bar_battery.sh"
tail = true
label-padding = 0
label-background = #000
click-right = "$TERMINAL -e $EDITOR ~/.scripts/herbstluftwm/bar_battery.sh"

[settings]
screenchange-reload = true

