# Logout Options (https://samsaffron.com/archive/2019/04/09/my-i3-window-manager-setup)
mode "EXIT: [l]ogout, [r]eboot, [s]uspend, [p]oweroff" {
    bindsym l mode "default", exec i3-msg exit
    bindsym r mode "default", exec systemctl reboot
    bindsym p mode "default", exec systemctl poweroff
    bindsym s mode "default", exec systemctl suspend && physlock, mode "default"
    bindsym $mod+Shift+e mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+Shift+e mode "EXIT: [l]ogout, [r]eboot, [s]uspend, [p]oweroff"

