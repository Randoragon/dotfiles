# Application Settings
## float option
for_window [class="^floatme$"] floating enable, border normal
for_window [title="^floatme$"] floating enable, border normal
## scratch term
for_window [class="scratch-term"] floating enable, border normal, move to scratchpad
no_focus [class="scratch-term"]
bindsym $mod+p [class="scratch-term"] scratchpad show
## ncmpcpp
for_window [class="scratch-music"] floating enable, border normal, move to scratchpad
no_focus [class="scratch-music"]
bindsym $mod+m [class="scratch-music"] scratchpad show
## thunderbird
assign [class="(?i)thunderbird"] ""
no_focus [class="(?i)thunderbird"]
## discord
assign [class="(?i)discord"] ""
no_focus [class="(?i)discord"]
## firefox
assign [class="(?i)firefox"] ""
no_focus [class="(?i)firefox"]
## keepassxc
for_window [class="(?i)keepassxc"] floating enable, border normal, move to scratchpad
no_focus [class="(?i)keepassxc"]
bindsym $mod+o [class="(?i)keepassxc"] scratchpad show
## doublecmd
for_window [class="(?i)doublecmd" window_role="[^(TfrmMain)]{1}$"] floating enable, border normal
## steam
assign [class="(?i)steam"] ""
no_focus [class="(?i)steam"]
for_window [class="(?i)steam" title="(?i)steam - news.*"] floating enable, border normal
## copyq
for_window [class="(?i)copyq"] floating enable, border normal
## feh
for_window [class="(?i)feh"] floating enable, border normal
## flameshot
for_window [class="(?i)flameshot"] floating enable, border none
## mpv
for_window [class="(?i)mpv"] floating enable, border normal

